<% if (site.posts.length) { %>
    <div class="widget-wrap widget-list">
        <h3 class="widget-title"><%= __('sidebar.contact') %></h3>
        <div class="widget">
            <ul>
                <% for (var i in theme.miscellaneous.contact) { %>
                    <li>
                        <a href="Mailto:<%- theme.miscellaneous.contact[i] %>"><%= i %></a>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
<% } %>
